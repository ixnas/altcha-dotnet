@model Ixnas.AltchaNet.AspNetCoreExample.Controllers.HomeController.MachineToMachineViewModel
<!doctype html>
<html lang="en">
<head>
    <title>Altcha.Net end-to-end examples</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script async defer src="https://cdn.jsdelivr.net/npm/altcha/dist/altcha.min.js" type="module"></script>
    <style>
        .codebox
        {
            margin-top: 0.375rem;
            border: 1px dashed #aaa;
        }
    </style>
</head>
<body class="pt-4 pb-4">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6">
            <div class="row gy-4">
                <div class="col-12">
                    <h1>Altcha.Net end-to-end examples</h1>
                </div>
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-heading mb-3">Machine to machine results</h4>
                            <p>This demonstrates a machine-to-machine ALTCHA using the AltchaSolver.</p>
                            <ol>
                                <li>
                                    Got challenge from remote server
                                    <pre class="codebox p-2">GET @Model.ChallengeUrl

@Model.Challenge
</pre>
                                </li>
                                <li>
                                    Solved on local server
                                    <pre class="codebox p-2">@Model.SolverResult</pre>
                                </li>
                                <li>
                                    Submitted form with ALTCHA to remote server
                                    <pre class="codebox p-2">POST @Model.ValidationUrl

@Model.ValidationResult
</pre>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <a class="btn btn-secondary" href="/">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>