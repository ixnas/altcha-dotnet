@model Ixnas.AltchaNet.AspNetCoreExample.Controllers.HomeController.ViewModel

<!doctype html>
<html lang="en">
<head>
    <title>Altcha.Net end-to-end examples</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script async defer src="https://cdn.jsdelivr.net/npm/altcha/dist/altcha.min.js" type="module"></script>
</head>
<body class="pt-4 pb-4">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6">
            <div class="row gy-4">
                <div class="col-12">
                    <h1>Altcha.Net end-to-end examples</h1>
                </div>
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-heading mb-3">Self-hosted</h4>
                            <form action="/verifySelfHosted" method="post">
                                <altcha-widget challengeurl="/challengeSelfHosted"></altcha-widget>
                                <br/>
                                <button type="submit" class="btn btn-secondary">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-heading mb-3">ALTCHA API - Regular</h4>
                            <form action="/verifyApiRegular" method="post">
                                <altcha-widget
                                    challengeurl="https://eu.altcha.org/api/v1/challenge?apiKey=@(Model.ApiKey)">
                                </altcha-widget>
                                <br/>
                                <button type="submit" class="btn btn-secondary">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-heading mb-3">ALTCHA API - Spam filtered</h4>
                            <form action="/verifyApiSpamFiltered" method="post">
                                <div class="mb-3">
                                    <label class="form-label" for="email">E-mail</label>
                                    <input class="form-control" id="email" name="email" type="text"/>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="something">Something</label>
                                    <input class="form-control" id="something" name="something" type="text"/>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="text">Text</label>
                                    <input class="form-control" id="text" name="text" type="text"/>
                                </div>
                                <altcha-widget
                                    challengeurl="https://eu.altcha.org/api/v1/challenge?apiKey=@(Model.ApiKey)"
                                    spamfilter>
                                </altcha-widget>
                                <br/>
                                <button type="submit" class="btn btn-secondary">Post</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-heading mb-3">Machine-to-machine ALTCHA</h4>
                            <a class="btn btn-secondary" href="/simulateMachineToMachine">Run simulation</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>